<h1>My Tasks</h1>
<ul>
    <% @tasks.each do |task| %>
    <ul class="list-item">
        <li><%= task.completed? ? "☑︎" : "☐" %></li>
        <li><%= link_to task.title, task_path(task) %></li>
        <li><%= link_to "✗", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %></li>
    </ul>
    <% end %>
</ul>

<p><%= link_to "➕ New Task", new_task_path %></p>